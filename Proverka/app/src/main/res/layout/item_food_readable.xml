<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/titelTextViewName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/titelTextViewNum"
        app:layout_constraintTop_toTopOf="@id/incbtt"
        app:layout_constraintBottom_toBottomOf="@id/incbtt"
        android:layout_marginEnd="8dp"/>

    <TextView
        android:id="@+id/titelTextViewNum"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@id/incbtt"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/titelTextViewName"
        app:layout_constraintTop_toTopOf="@id/incbtt"
        app:layout_constraintBottom_toBottomOf="@id/incbtt"
        android:layout_marginEnd="8dp"/>
    <Button
        android:id="@+id/incbtt"
        android:layout_width="40dp"
        android:text="+"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/disbtt"
        app:layout_constraintStart_toEndOf="@id/titelTextViewNum"
        android:layout_marginEnd="8dp"
        />
    <Button
        android:id="@+id/disbtt"
        android:layout_width="40dp"
        android:text="-"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/dellbtt"
        app:layout_constraintStart_toEndOf="@id/incbtt"
        android:layout_marginEnd="8dp"
        />

    <Button
        android:id="@+id/dellbtt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="Удалить"
        android:textSize="10dp"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/disbtt"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>